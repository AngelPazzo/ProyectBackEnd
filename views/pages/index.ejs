<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tp5</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    
    <style>
        .formdata {
          margin-top: 50px;
          border: 10px solid rgb(133, 24, 24);
          border-radius: 10px;
          padding: 20px;  
        }
    </style>

</head>
  <body>
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <h1>Welcome to tp5</h1>
    </div>
 

    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <form class="formdata" method="POST" action="/products">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name">
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" class="form-control" id="price" name="price">
      </div>
      <div class="mb-3">
        
        <label for="image" class="form-label">Image</label>
        <input type="url" class="form-control" id="image" name="image"> 

      </div>
      <div class="col-md-12 text-center">
      <button class="" type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
    </div>
    <br>
    
    
    <%- include('partials/productList', {products: products}) %> 



    


    
    
  </body>
</html>